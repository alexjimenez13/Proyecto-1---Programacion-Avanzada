@{
    Layout = "~/Views/Shared/_LayoutIngreso.cshtml";
    ViewBag.Title = "Olvidé contraseña";
}

<form method="post" action="@Url.Action("OlvidoContraseña", "Usuario")">
    @Html.AntiForgeryToken()
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-dark text-white text-center">
                        <h4>Recuperar contraseña</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="CORREO" class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control" id="CORREO" name="CORREO" placeholder="Ingresa tu correo electrónico" required />
                        </div>
                        <button type="submit" class="btn btn-dark w-100">Recuperar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@if (ViewBag.Mensaje != null)
{
    <p style="color:green">@ViewBag.Mensaje</p>
}

@Html.ValidationSummary(true)
