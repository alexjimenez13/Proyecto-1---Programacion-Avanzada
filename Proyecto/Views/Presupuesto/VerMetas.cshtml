@model IEnumerable<Proyecto.Models.Meta>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Mis Metas";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Mis Metas</h2>
        </div>
        <div class="col-md-6 text-end">
            @Html.ActionLink("Registrar nueva meta", "RegistrarMeta", "Presupuesto", null, new { @class = "btn btn-success" })
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Tipo</th>
                        <th>Monto objetivo</th>
                        <th>Descripción</th>
                        <th>Fecha objetivo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var meta in Model)
                    {
                        <tr>
                            <td>@meta.TIPO_META</td>
                            <td>@meta.MONTO_OBJETIVO.ToString("C")</td>
                            <td>@(string.IsNullOrEmpty(meta.DESCRIPCION) ? "-" : meta.DESCRIPCION)</td>
                            <td>@meta.FECHA_CUMPLIMIENTO</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No tienes metas registradas.</div>
    }
</div>
