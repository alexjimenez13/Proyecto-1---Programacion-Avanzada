
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Proyecto.Models.Meta

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrar Meta Financiera";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="card-title">Registrar meta</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("RegistrarMeta", "Presupuesto", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.TIPO_META, "Tipo de meta", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.TIPO_META, new { @class = "form-control", required = "required" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(m => m.MONTO_OBJETIVO, "Monto objetivo", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.MONTO_OBJETIVO, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(m => m.FECHA_CUMPLIMIENTO, "Fecha de cumplimiento", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.FECHA_CUMPLIMIENTO, new { @class = "form-control", type = "date", required = "required" })
                </div>

                <div class="col-md-12 mt-12">
                    @Html.LabelFor(m => m.DESCRIPCION, "Descripción", new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.DESCRIPCION, new { @class = "form-control", rows = "3", placeholder = "Descripción opcional" })
                </div>



                <div class="col-md-12 mt-3">
                    <button type="submit" class="btn btn-success w-100">Registrar meta</button>
                </div>
            </div>
            }
        </div>
    </div>

</div>


