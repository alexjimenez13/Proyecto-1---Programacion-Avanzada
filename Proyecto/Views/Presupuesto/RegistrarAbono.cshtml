@model Proyecto.Models.AbonoMeta

@{
    ViewBag.Title = "Registrar Abono";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="card-title">Registrar Abono</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("RegistrarAbono", "Presupuesto", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.META_ID, "Meta", new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.META_ID, (SelectList)ViewBag.Metas, "Seleccione una meta", new { @class = "form-control", required = "required" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.MONTO, "Monto", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.MONTO, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
                    </div>
                    <div class="col-md-6 mt-3">
                        @Html.LabelFor(m => m.FECHA, "Fecha del Abono", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.FECHA, new { @class = "form-control", type = "date", required = "required" })
                    </div>
                    <div class="col-md-12 mt-3">
                        <button type="submit" class="btn btn-success w-100">Registrar abono</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
